generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstName String
  lastName  String
  cars      Car[]

  @@map("users")
}

model Car {
  id          Int      @id @default(autoincrement())
  name        String
  numberPlate String   @unique
  startDate   DateTime
  endDate     DateTime
  distance    String
  note        String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  @@map("cars")
}
